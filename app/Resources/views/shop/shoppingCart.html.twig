                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        {#<td>
                            <button type="button" class="btn btn-default">
                                <span class="glyphicon glyphicon-shopping-cart"></span> Continue Shopping
                            </button></td>#}
                        <td>
                            <a href="{{ path('delivery_address') }}" style="background-color: orange;color:black;" class="btn" >
                                Завърши
                            <a/></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


{% endblock %}