<div class="container">
    <div class="row col-md-6 col-md-offset-2 custyle">
        <table class="table table-striped custab">
            <thead>
            <tr>
                <th>Име</th>
                <th>Адрес</th>
                <th>Град</th>
            </tr>
            </thead>
            {% for userId in users%}
                <tr>
                    <th>{{userId.firstName}}{{userId.lastName}}</th>
                    <th>{{userId.email}}</th>
                    <th><a href="{{ path('one_order',{id:userId.id}) }}">Детайли за поръчката</a></th>
                </tr>
            {% endfor %}

        </table>
    </div>
</div>
