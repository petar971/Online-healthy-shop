{% extends 'base.html.twig' %}



    {% block main %}

        <div class="row" style="margin-left:0;margin-right: 0;margin-top:70px">

            {% for article in articles %}
                <div class="col-md-6 col-sm-6 col-xs-12 article">
                    <div class="card-content">
                        <div class="row" style="">
                            <img src="{{ asset('uploads/images/articles/') ~ article.image}}" style="width: 100%; height:384px">
                        </div>
                        <div class="row content-article" style="">
                            <h4 style="">{{ article.title }}</h4>

                            <a href="{{ path('viewOne_article',{id: article.id}) }}" class=" btn btn-success">Прочети</a>
                            <p style="color:black">{{ article.dateAdded|date("m/d/Y")}}</p>
                        </div>



                    </div>
                </div>
            {% endfor %}


        </div>

    {% endblock %}

