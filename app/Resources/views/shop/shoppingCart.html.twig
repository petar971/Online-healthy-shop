{% extends 'base.html.twig' %}

{% block main %}
    <div class="container" style="margin-top: 80px">
        <div class="row">
            <div class="col-sm-12 col-md-10 col-md-offset-1">
                <table class="table " style="background-color: rgba(255,255,255,0.7)">
                    <thead>
                    <tr>
                        <th>Продукт</th>

                        <th class="text-center">Цена</th>
                        <th>Количество</th>
                        <th class="text-center">Тотал</th>
                        <th> </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for cart in carts %}
                    <tr>
                        <td class="col-md-6">
                            <div class="media">
                                <a class="thumbnail pull-left" href="{{ path('view_oneProduct', {'id': cart.product.id}) }}"> <img class="media-object" src="{{ asset('uploads/images/products/') ~ cart.product.image}}" style="width: 72px; height: 72px;"> </a>
                                <div class="media-body">
                                    <h4 class="media-heading"><a href="{{ path('view_oneProduct', {'id': cart.product.id}) }}">{{ cart.product.name }}</a></h4>
                                    <h5 class="media-heading"> производител <a href="#">{{ cart.product.maker }}</a></h5>

                                </div>
                            </div></td>
                        {#<td class="col-md-1" style="text-align: center">


                            <select name="">
                                    <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>


                            </select>

                        </td>#}
                        <td class="col-md-1 text-center"><strong>{{ cart.product.price }}лв.</strong></td>
                        <td class="col-md-1 text-center"><strong>{{ cart.quantity }}</strong></td>
                        <td class="col-md-1 text-center"><strong>{{ cart.quantity * cart.product.price }}лв.</strong></td>
                        <td class="col-md-1">
                        <a href="{{ path('remove_from_cart',{id:cart.id}) }}" class="btn btn-danger" >Премахни</a>
                        </td>

                    </tr>
                    {% endfor %}

                    <tr>
                        <td>   </td>
